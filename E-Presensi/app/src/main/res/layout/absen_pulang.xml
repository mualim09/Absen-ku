    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Absen"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/jenis_absen"
            android:id="@+id/jenis_absenPulang"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/StatusPulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATANG"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/jenis_absenPulang"/>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/waktu_absen"
            android:id="@+id/waktu_absenPulang"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/jenis_absenPulang"
            />
        <TextView
            android:id="@+id/jamPulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/waktu_absenPulang"
            android:layout_below="@+id/StatusPulang"
            android:layout_marginTop="22dp"/>
        <TextView
            android:id="@+id/tanggalPulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jamPulang"
            android:layout_toRightOf="@+id/tanggal_absenPulang"
            android:text="12/12/2020"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/tanggal_absen"
            android:id="@+id/tanggal_absenPulang"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/waktu_absenPulang"
            />
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/lokasi_absen"
            android:id="@+id/lokasi_absenPulang"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tanggal_absenPulang"
            />
        <TextView
            android:id="@+id/txt_lokasiPulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalan Ciparay"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/tanggal_absenPulang"
            android:layout_below="@+id/tanggalPulang"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

</LinearLayout>
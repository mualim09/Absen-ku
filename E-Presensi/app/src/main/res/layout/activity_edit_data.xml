<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPassword"
    android:orientation="vertical"
    android:background="@drawable/ubahpass">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="20dp"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:text="Edit Data"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:id="@+id/profil"
        android:layout_marginTop="40dp"
        android:layout_marginStart="130dp"
        android:src="@drawable/avatar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="312dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <EditText
        android:id="@+id/pendidikan"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background"
        android:hint="Pendidikan"
        android:padding="16dp"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/alamat"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:padding="16dp"
        android:hint="Alamat"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/goldarah"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@drawable/background"
        android:hint="Golongan Darah"
        android:maxLines="1"
        />


    <EditText
        android:id="@+id/agama"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:hint="Agama"
        />

            <EditText
                android:id="@+id/nonpwp"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="No NPWP"
                />

            <EditText
                android:id="@+id/baju"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="Ukuran Baju"
                />

            <EditText
                android:id="@+id/celana"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="Ukuran Celana"
                />

            <EditText
                android:id="@+id/sepatu"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="Ukuran Sepatu"
                />

            <EditText
                android:id="@+id/hp"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="No HP"
                />

            <EditText
                android:id="@+id/hpkeluarga"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:hint="No HP Keluarga Terdekat"
                />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:maxLines="1"
        android:layout_marginStart="62dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</LinearLayout>
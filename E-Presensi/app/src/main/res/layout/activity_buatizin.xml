<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Teguran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/merah">

        <Button
            android:id="@+id/button3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="20dp"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="16dp"
            android:text="Buat Permohonan Izin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

    <Spinner
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/listItem"

        android:textSize="17dp"
        android:entries="@array/jenis_izin"
        android:padding="15dp">
    </Spinner>

    </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_dateresult"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Tanggal Mulai"
                />

            <Button
                android:id="@+id/bt_datepicker"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_date_range_black_24dp"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/background">

            <TextView
                android:id="@+id/tv_dateresult2"
                android:layout_width="250dp"
                android:layout_marginLeft="23dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Tanggal Akhir"
                />

            <Button
                android:id="@+id/bt_datepicker2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_date_range_black_24dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uploadbukti"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Upload Bukti Izin"
                />


            <Button
                android:id="@+id/buttonbukti"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_file_upload_black_24dp"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="110dp"
        android:background="@drawable/keterangan"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:textSize="14dp"
            android:hint="Keterangan"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

    </LinearLayout>

        <Button
            android:id="@+id/buttonsubmit"
            android:layout_width="236dp"
            android:layout_height="47dp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="16dp"
           android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            app:layout_constraintBottom_toBottomOf="parent"
            />



</LinearLayout>


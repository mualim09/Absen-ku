<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buatizin"
    android:orientation="vertical"
    android:background="@drawable/buatizin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="18dp"
            android:text="Buat Permohonan Izin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="75dp"
        android:editable="false"
        android:background="@null"
        android:textSize="16dp"
        android:hint="Pilih Jenis Izin"
        />

        <Button
            android:id="@+id/button5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_marginStart="155dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="45dp"
        android:background="@null"
        android:textSize="16dp"
        android:hint="Tanggal Mulai"
        />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:textSize="17dp"
        android:hint="Tanggal Akhir"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:textSize="17dp"
            android:hint="Upload Bukti Izin"
            android:editable="false"
            />


        <Button
            android:id="@+id/button4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_file_upload_black_24dp"
            android:layout_marginStart="120dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:textSize="17dp"
        android:hint="Keterangan"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="142dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</LinearLayout>
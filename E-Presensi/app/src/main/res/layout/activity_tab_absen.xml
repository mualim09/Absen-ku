<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:text="RABU, 3 JUNI 2020"
        android:textColor="@color/merah"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notif"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Absen Datang"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/jam_2"
            android:layout_width="24dp"
            android:layout_marginStart="25dp"
            android:layout_height="24dp"
            android:background="@drawable/clock"
            android:layout_toRightOf="@+id/pulang"

            android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/absen_datang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="09:00 AM"
        android:textColor="@color/black"
        android:textSize="16sp"

        />

        </LinearLayout>

    <TextView
        android:id="@+id/statusdatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
       android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/status_background"
        android:text="Terlambat"
        android:textColor="@color/black"
        android:textSize="12sp"

        />

</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notif"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Absen Pulang"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/jam3"
                android:layout_width="24dp"
                android:layout_marginStart="25dp"
                android:layout_height="24dp"
                android:background="@drawable/clock"
                android:layout_toRightOf="@+id/pulang"

                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/absen_pulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="05:00 PM"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

        </LinearLayout>


        <TextView
            android:id="@+id/statuspulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Overtime"
            android:background="@drawable/status_background"
            android:textColor="@color/black"
            android:textSize="12sp"

            />

    </LinearLayout>


</LinearLayout>
